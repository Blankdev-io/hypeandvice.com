{% layout none %}

{
  "collections": [
    {% paginate collections by 1000 %}
      {% for collection in collections %}
        {
          "handle": "{{ collection.handle }}",
          "id": {{ collection.id }},
          "tags": {{ collection.tags  | json}}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    {% endpaginate %}
  ]
}