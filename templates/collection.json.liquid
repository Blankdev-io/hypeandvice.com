{% layout none %}

{
  "products": [
    {% paginate collection.products by 1000 %}
      {% for product in collection.products %}
        {
          "handle": "{{ product.handle }}",
          "id": {{ product.id }},
          "tags": {{ product.tags  | json}}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    {% endpaginate %}
  ]
}